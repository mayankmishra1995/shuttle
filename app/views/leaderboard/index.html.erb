<h1>Leaderboard</h1>

<table border="1" cellpadding="6">
  <tr>
    <th>Rank</th>
    <th>Player</th>
    <th>Wins</th>
    <th>Losses</th>
  </tr>

  <% @players.each_with_index do |player, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= player.name %></td>
      <td><%= player.wins %></td>
      <td><%= player.losses %></td>
    </tr>
  <% end %>
</table>

